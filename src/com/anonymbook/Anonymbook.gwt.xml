<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.2.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.2.0/distro-source/core/src/gwt-module.dtd">

<module rename-to="anonymbook">

	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.resources.Resources" />
	<inherits name="com.google.gwt.json.JSON" />
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name="com.google.gwt.i18n.I18N" />
	
	<source path="client" />
	<source path="autoresize" />
	<source path="lightface" />
	<source path="toastmessage" />
	<source path="jquery/tools" />
	<public path="public" />

	<extend-property name="locale" values="en,pt_BR" />
	<set-property name="locale" value="en,pt_BR"/>
	<set-property-fallback name="locale" value="en"/>
	
	<set-configuration-property name="locale.cookie" value="anonym_locale"/>
	<set-configuration-property name="UiBinder.useSafeHtmlTemplates" value="true" /> 
	
	<script src="https://connect.facebook.net/en_US/all.js" />
	
	<entry-point class="com.anonymbook.client.Anonymbook" />

</module>